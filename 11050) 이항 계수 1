#include <stdio.h>
#include <algorithm>
using namespace std;

int dp[11][11];
int main(void)
{
	int n, r;
	scanf("%d %d", &n, &r);
	dp[1][0] = dp[1][1] = 1;

	for (int i = 2; i <= n; i++)
	{
		dp[i][0] = 1;
		for (int j = 1; j < i; j++)
		{
			dp[i][j] = dp[i - 1][j - 1] + dp[i - 1][j];
		}

		dp[i][i] = 1;
	}
	printf("%d", dp[n][r]);
	return 0;
}
