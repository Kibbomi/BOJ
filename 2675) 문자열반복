#include <stdio.h>


int main(void)
{
	int t;
	scanf("%d", &t);

	for (int i = 0; i < t; i++)
	{
		int count = 0;
		char cache[20] = { 0 };

		scanf("%d", &count);
		scanf("%s", cache);

		for (int i = 0; cache[i] != 0; i++)
		{
			for (int j = 0; j < count; j++)
			{
				printf("%c", cache[i]);
			}
		}
		printf("\n");
	}
	return 0;
}
