#include <stdio.h>


int main (void)
{
	int val=0;
	int ret = 0;
	scanf("%d", &val);
	val = 1000 - val;

	while (val > 0)
	{
		if (val >= 500)
		{
			val -= 500;
			ret++;
		}
		else if (val >= 100)
		{
			val -= 100;
			ret++;
		}
		else if (val >= 50)
		{
			val -= 50;
			ret++;
		}
		else if (val >= 10)
		{
			val -= 10;
			ret++;
		}
		else if (val >= 5)
		{
			val -= 5;
			ret++;
		}
		else if (val >= 1)
		{
			val -= 1;
			ret++;
		}
	}

	printf("%d", ret);


	return 0;
}
